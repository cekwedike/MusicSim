{
  "name": "musicsim",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently --kill-others --prefix-colors \"cyan,magenta\" --prefix \"{name}\" \"npm:dev:frontend\" \"npm:dev:backend\"",
    "dev:frontend": "vite --host",
    "dev:backend": "cd backend && npm run dev",
    "dev:all": "npm run dev",
    "build": "vite build",
    "preview": "vite preview",
    "start": "concurrently --kill-others --prefix-colors \"cyan,magenta\" --prefix \"{name}\" \"npm run preview\" \"npm run start:backend\"",
    "start:backend": "cd backend && npm start",
    "install:all": "npm install && npm run install:backend",
    "install:backend": "cd backend && npm install"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@types/node": "^24.6.2",
    "concurrently": "^9.2.1",
    "typescript": "^5.9.3",
    "vite": "^7.1.8"
  }
}
