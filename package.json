{
  "name": "musicsim",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently --kill-others --prefix-colors \"cyan,magenta\" --prefix \"{name}\" \"npm:dev:frontend\" \"npm:dev:backend\"",
    "dev:frontend": "vite --host",
    "dev:backend": "cd backend && npm run dev",
    "dev:all": "npm run dev",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ci": "vitest run --coverage",
    "lint": "echo \"Lint script not configured yet\"",
    "lint:fix": "echo \"Lint fix script not configured yet\"",
    "start": "concurrently --kill-others --prefix-colors \"cyan,magenta\" --prefix \"{name}\" \"npm run preview\" \"npm run start:backend\"",
    "start:backend": "cd backend && npm start",
    "install:all": "npm install && npm run install:backend",
    "install:backend": "cd backend && npm install",
    "ci:test": "npm ci && cd backend && npm ci && cd .. && npm run test:ci && cd backend && npm test",
    "security:audit": "npm audit && cd backend && npm audit",
    "deps:check": "npm outdated && cd backend && npm outdated",
    "clean": "rimraf dist && rimraf backend/node_modules/.cache",
    "pwa:check": "pwsh -File scripts/check-pwa.ps1",
    "pwa:splash": "node frontend/scripts/generate-splash-screens.js",
    "pwa:test": "npm run build && npm run preview"
  },
  "dependencies": {
    "@react-oauth/google": "^0.12.2",
    "@supabase/supabase-js": "^2.79.0",
    "axios": "^1.12.2",
    "lucide-react": "^0.545.0",
    "png-to-ico": "^3.0.1",
    "pureimage": "^0.4.18",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "test": "^3.3.0",
    "workbox-build": "^7.3.0",
    "workbox-precaching": "^7.3.0",
    "workbox-routing": "^7.3.0",
    "workbox-strategies": "^7.3.0"
  },
  "devDependencies": {
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.6.2",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@types/testing-library__react": "^10.0.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "concurrently": "^9.2.1",
    "happy-dom": "^20.0.10",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.3",
    "vite": "^7.1.8",
    "vitest": "^3.2.4"
  }
}
